package com.app.controller;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/api/user")
public class UserController {
	
	@GetMapping("/user/{id}")
	public ResponseEntity<UserRest> getUser(@PathVariable(name="id") String id) {
		
		UserRest userRest = new UserRest();
		userRest.setFirstName("vivek");
		userRest.setLastName("N");
		userRest.setEmail("vivek@gmail.com");
		userRest.setUserId(id);
		
		return new ResponseEntity<UserRest>(userRest,HttpStatus.ACCEPTED);
	}
}
